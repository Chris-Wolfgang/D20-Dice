{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/**/*.csproj"
          ],
          "src": "../"
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net8.0"
      },
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    // Note: "../docs" is used as the DocFX output directory for GitHub Actions deployment and is git-ignored for local builds.
    "output": "../docs",
    "template": [
      "default",
      "modern",
      "modern-dark"
    ],
    "globalMetadata": {
      "_appName": "Wolfgang.D20-Dice",
      "_appTitle": "Wolfgang.D20-Dice Documentation",
      "_appLogoPath": "logo.svg",
      "_enableSearch": true,
      "_appFooter": "Made with DocFX",
      "_disableSidebar": false,
      "_disableTocFilter": false,
      "_enableDarkMode": true,
      "_baseUrl": "https://Chris-Wolfgang.github.io/D20-Dice/",
      "pdf": true
    }
  }
}

